<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.TeacherHomeActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="351dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@drawable/kinderbook" />

    <Button
        android:id="@+id/student"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/button_background"
        android:text="학생관리"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.036"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="385dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:text="학부모와 연락하기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student"
        app:layout_constraintVertical_bias="0.028"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/time_table"
        android:layout_width="385dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:text="시 간 표"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_button"
        app:layout_constraintVertical_bias="0.036"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="385dp"
        android:layout_height="148dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_table"
        app:layout_constraintVertical_bias="0.059">

        <Button
            android:id="@+id/posting"
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:background="@drawable/text_background2"
            android:text="알림장"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="385dp"
            android:layout_height="92dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/text_background"
            android:text="2022-06-09"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="385dp"
        android:layout_height="217dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.168">

        <Button
            android:id="@+id/meal"
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:background="@drawable/text_background2"
            android:text="2022년 6월 09일"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,DuplicateClickableBoundsCheck" />

        <TextView
            android:id="@+id/meal_notice"
            android:layout_width="385dp"
            android:layout_height="161dp"
            android:background="@drawable/text_background"
            android:text="찹쌀밥      사골떡국 1.5.6.13.     시금치나물무침      닭꼬치 5.6.12.13.     배추겉절이(완제) 9.13.     우유 (희망자)2.     포춘쿠키 1.2.4.5.6.13."
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/class_manage"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_background"
        android:text="반관리"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/student"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.036" />

</androidx.constraintlayout.widget.ConstraintLayout>